        </div>

        <hr />
        <h5 class="title">Escribe un comentario</h5>

        <div class="form form-small">

        {%  render(controller("AppSiteBundle:Default:comentar")) %}


      </div> 

    </div>

  </div>

</div>                                                                    



</div>
