{% block contenido %}

<!-- Items -->

<div class="items">
  <div class="container">
    <div class="row">

      <!-- Sidebar -->
      <div class="col-md-4 col-sm-4 hidden-xs">

        <h5 class="title">Categorias</h5>
        <!-- Sidebar navigation -->
        <nav>
          <ul id="nav">
            <!-- Main menu. Use the class "has_sub" to "li" tag if it has submenu. -->
         

          {% for categoria in categorias %}    
               <li class="has_sub categoria_list"    {% if loop.index > 5 %}      style="display:none;"  {% endif %} >
                  <a href="{{  path('ver_categoria', { id_categoria : categoria.id }) }}">{{ categoria.nombre }}</a>
               </li>
          {% endfor %}
 
